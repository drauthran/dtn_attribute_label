<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_dtn_attribute_label_new" model="ir.actions.report">
            <field name="name">Этикетка (Надежное Название)</field> <field name="model">product.product</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">dtn_attribute_label.report_template_product_name_reliable</field> <field name="report_file">dtn_attribute_label.report_template_product_name_reliable</field>
            <field name="binding_model_id" ref="product.model_product_product"/>
            <field name="paperformat_id" ref="dtn_attribute_label.paperformat_label_40x58_dymo_override"/>
        </record>

        <template id="report_template_product_name_reliable">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="doc">
                    <div style="width:40mm; height:58mm; font-size:12pt; background:#FFF; color:#000; padding:1mm; margin:0; box-sizing:border-box; font-family: Arial, Helvetica, sans-serif; text-align: center; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                        <t t-if="doc.x_reliable_name and doc.x_reliable_active">
                            <span><t t-esc="doc.x_reliable_name"/></span>
                        </t>
                        <t t-else="">
                            <span>Недоступно. ID: <t t-esc="doc.id or 'N/A'"/> (Активно: <t t-esc="doc.x_reliable_active"/>)</span>
                            <t t-if="not doc.x_reliable_name"><span> (Имя не получено)</span></t>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>